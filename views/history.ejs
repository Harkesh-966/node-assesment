<!DOCTYPE html>
<html lang="en">
<head>
    <title>Weather History</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
<div class="container py-4">
    <h3 class="mb-3">ðŸ“… Weather Search History</h3>
    <a href="/" class="btn btn-sm btn-primary mb-3">Back</a>
    <table class="table table-bordered table-sm">
        <thead class="thead-dark">
            <tr>
                <th>Address</th>
                <th>Temp (Â°C)</th>
                <th>Weather</th>
                <th>Date/Time</th>
            </tr>
        </thead>
        <tbody>
            <% history.forEach(row => { 
                let w = row.weather_json;
            %>
                <tr>
                    <td><%= row.address %></td>
                    <td><%= w.main.temp %></td>
                    <td><%= w.weather[0].description %></td>
                    <td><%= row.created_at.toLocaleString() %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>
